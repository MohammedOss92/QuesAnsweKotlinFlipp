<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnQues"
        android:layout_width="@dimen/btn_Ques_width"
        android:layout_height="@dimen/btn_Ques_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/state_btn_front"
        android:inputType="text"
        android:text="@string/question"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_ques_text" />

    <Button
        android:id="@+id/btnRate"
        android:layout_width="@dimen/btn_Rate_width"
        android:layout_height="@dimen/btn_Rate_height"

        android:layout_marginStart="500dp"
        android:layout_marginRight="462dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/state_btn_front"
        android:inputType="text"
        android:text="@string/rate_app"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_rate_text"
        android:layout_marginLeft="500dp" />

</RelativeLayout>